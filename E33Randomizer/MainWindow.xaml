<Window x:Class="E33Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="Expedition 33 Randomizer" Height="800" Width="800"
        MinHeight="800" MinWidth="800">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Main Tab Control -->
        <TabControl Grid.Row="0" Margin="0">

            <!-- Enemy Randomizer Tab -->
            <TabItem Header="Enemy Randomizer">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <!-- Randomize Encounter Sizes -->
                    <StackPanel Orientation="Vertical" Margin="0">
                        <CheckBox Content="Randomize enemies"
                                  IsChecked="{Binding RandomizeEnemies}"
                                  Margin="0,0,0,0"
                                  FontSize="14" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <CheckBox Grid.Column="0" Name="RandomizeEncounterSizesCheckBox"
                                      Content="Randomize encounter sizes"
                                      IsChecked="{Binding RandomizeEncounterSizes}"
                                      Margin="0,0,0,0"
                                      FontSize="14" />
                            <CheckBox Grid.Column="1" Name="EncounterSize1CheckBox"
                                      Tag="1"
                                      Content="1"
                                      IsChecked="{Binding EncounterSizeOne}"
                                      Margin="10,0,0,0"
                                      FontSize="14"
                                      Visibility="{Binding IsChecked, ElementName=RandomizeEncounterSizesCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <CheckBox Grid.Column="2" Name="EncounterSize2CheckBox"
                                      Tag="2"
                                      Content="2"
                                      IsChecked="{Binding EncounterSizeTwo}"
                                      Margin="0,0,0,0"
                                      FontSize="14"
                                      Visibility="{Binding IsChecked, ElementName=RandomizeEncounterSizesCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}" />
                            <CheckBox Grid.Column="3" Name="EncounterSize3CheckBox"
                                      Tag="3"
                                      Content="3"
                                      IsChecked="{Binding EncounterSizeThree}"
                                      Margin="0,0,0,0"
                                      FontSize="14"
                                      Visibility="{Binding IsChecked, ElementName=RandomizeEncounterSizesCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </Grid>

                        <!-- Randomize Merchant Fights -->
                        <StackPanel Orientation="Vertical" Margin="0">
                            <CheckBox Name="ChangeSizeOfNonRandomEncountersCheckBox"
                                      Content="Randomize size of encounters that don't contain randomized enemies"
                                      IsChecked="{Binding ChangeSizeOfNonRandomizedEncounters}"
                                      Margin="20, 0, 0, 0"
                                      FontSize="14"
                                      Visibility="{Binding IsChecked, ElementName=RandomizeEncounterSizesCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>

                        <CheckBox Name="RandomizeMerchantFightsCheckBox"
                                  Content="Randomize merchant fights"
                                  IsChecked="{Binding RandomizeMerchantFights}"
                                  Margin="0"
                                  FontSize="14" />
                        <StackPanel Orientation="Vertical" Margin="0"
                                    Grid.Row="2">
                            <!-- <CheckBox Name="TieLootToEncountersButton" -->
                            <!--           Content="Tie loot drops to encounters instead of enemies" -->
                            <!--           IsChecked="True" -->
                            <!--           Margin="0" -->
                            <!--           FontSize="14"/> -->
                            <TextBlock
                                Text="Merchants' special wares unlocks and Maelle's paintress skills are considered loot drops. It is recommended that you only disable this if you are also running an item randomizer."
                                Foreground="Orange"
                                FontWeight="Bold"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                MaxWidth="800"
                                TextWrapping="Wrap" />
                        </StackPanel>
                        <!-- Include Cut Content -->
                        <StackPanel Orientation="Vertical" Margin="0"
                                    Grid.Row="3">
                            <CheckBox Name="IncludeCutContentCheckBox"
                                      Content="Include cut content (gets overriden by custom placement)"
                                      IsChecked="{Binding IncludeCutContent}"
                                      FontSize="14" />
                            <TextBlock
                                Text="Be careful when parrying cut content enemies, as it can break their AI. You can replace broken enemies in Edit Encounters window."
                                Foreground="Orange"
                                FontWeight="Bold"
                                Margin="10,5,0,5"
                                VerticalAlignment="Center"
                                Visibility="{Binding IsChecked, ElementName=IncludeCutContentCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}" />
                        </StackPanel>

                        <CheckBox Name="EnableEnemyOnslaughtCheckBox"
                                  Grid.Row="4"
                                  Content="Enable enemy onslaught"
                                  IsChecked="{Binding EnableEnemyOnslaught}"
                                  Margin="0"
                                  FontSize="14" />
                        <StackPanel Orientation="Vertical" Margin="0,0,0,0"
                                    Grid.Row="5"
                                    Visibility="{Binding IsChecked, ElementName=EnableEnemyOnslaughtCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <TextBlock
                                Text="The game has full support for 4 enemies, but the 5th and beyond gets lumped into a single spot outside the fighting arena. They will still function properly except that you won't be able to see their attacks or shoot them."
                                Foreground="Orange"
                                FontWeight="Bold"
                                Margin="10,0,0,0"
                                VerticalAlignment="Center"
                                TextWrapping="Wrap"
                                MaxWidth="800" />
                            <CheckBox Name="RandomizeAdditionalEnemiesCheckBox"
                                      Content="Randomize added enemies"
                                      IsChecked="{Binding RandomizeAddedEnemies}"
                                      Margin="20,10,0,0"
                                      FontSize="14"
                                      Grid.Row="6" />
                            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                <Label Content="Number of additional enemies:"
                                       FontSize="14" />
                                <xctk:IntegerUpDown Name="NumberOfAdditionalEnemiesTextBox"
                                                    Text="{Binding EnemyOnslaughtAdditionalEnemies}"
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Maximum="99"
                                                    Minimum="1"
                                                    Height="25"
                                                    Width="50"
                                                    FontSize="16"
                                                    MaxLength="2" />
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="15,0,0,0">
                                <Label Content="Cap encounter size at:"
                                       FontSize="14" />
                                <xctk:IntegerUpDown Name="EnemyNumberCapTextBox"
                                                    Text="{Binding EnemyOnslaughtEnemyCap}"
                                                    Margin="5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Maximum="99"
                                                    Minimum="1"
                                                    Height="25"
                                                    Width="50"
                                                    FontSize="16"
                                                    MaxLength="2" />
                            </StackPanel>

                        </StackPanel>
                        <CheckBox Name="EnsureBossesInBossEncountersCheckBox"
                                  Content="Ensure that boss encounters have at least one boss"
                                  IsChecked="{Binding EnsureBossesInBossEncounters}"
                                  Margin="0,0,0,0"
                                  FontSize="14"
                                  Grid.Row="7" />
                        <CheckBox Name="ReduceBossRepetitionCheckBox"
                                  Content="Reduce boss repetition (ignores frequency adjustments)"
                                  IsChecked="{Binding ReduceBossRepetition}"
                                  Margin="0,0,0,0"
                                  FontSize="14"
                                  Grid.Row="8" />

                        <CheckBox Content="Replace Phase 2 Simon with Phase 1 in mandatory fights until after the Lune tutorial fight"
                                  IsChecked="{Binding NoSimonP2BeforeLune}"
                                  Margin="0,0,0,0"
                                  FontSize="14" />
                        <!-- Phase 2 Simon Dropdown -->
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,20"
                                    Grid.Row="9" Visibility="Hidden">
                            <Label Content="Replace Phase 2 Simon with Phase 1 in mandatory fights until after:"
                                   FontSize="15" />
                            <ComboBox Name="Phase2SimonComboBox"
                                      SelectedItem="{Binding EarliestSimonP2Encounter}"
                                      Width="150"
                                      HorizontalAlignment="Left"
                                      Margin="0,0,0,0"
                                      FontSize="16">
                                <ComboBoxItem Content="Lune Tutorial" IsSelected="True"
                                              Tag="SM_Eveque_ShieldTutorial*1" />
                                <ComboBoxItem Content="Eveque" Tag="GO_Curator_JumpTutorial*1" />
                                <ComboBoxItem Content="Goblu" Tag="AS_PotatoBag_Boss" />
                                <ComboBoxItem Content="Ultimate Sakapatate" Tag="QUEST_MatthieuTheColossus*1" />
                                <ComboBoxItem Content="Gestral Tournament" Tag="EN_Francois" />
                                <ComboBoxItem Content="Never" Tag="SM_Lancelier*1" />

                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <!-- Custom Enemy Placement Button -->
                        <Button Name="CustomEnemyPlacementButton"
                                Content="Customize Enemy Placements"
                                Width="500"
                                Height="50"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20"
                                Background="Aqua"
                                Click="CustomEnemyPlacementButton_Click"
                                Grid.Row="10" />
                        <!-- Custom Enemy Placement Button -->
                        <Button Name="EditEncountersButton"
                                Content="Edit Individual Encounters"
                                Width="500"
                                Height="50"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20"
                                Background="Aqua"
                                Click="EditEncountersButton_Click"
                                Grid.Row="11" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <!-- Item Randomizer Tab -->
            <TabItem Header="Item Randomizer">
                <Grid Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <StackPanel>
                        <CheckBox Content="Randomize items"
                                  IsChecked="{Binding RandomizeItems}"
                                  Margin="0,0,0,0"
                                  FontSize="14" />
                        <CheckBox Content="Make every item show a pick up notification"
                                  IsChecked="{Binding MakeEveryItemVisible}"
                                  Margin="0,6,0,0"
                                  FontSize="14" />
                        <CheckBox Content="Receive Painted Power at the start of Act III"
                                  IsChecked="{Binding EnsurePaintedPowerFromPaintress}"
                                  Margin="0,6,0,0"
                                  FontSize="14" />
                        <!-- <CheckBox Content="Randomize starting weapons" -->
                        <!--           IsChecked="{Binding RandomizeStartingWeapons}" -->
                        <!--           Margin="0" -->
                        <!--           FontSize="14" /> -->
                        <CheckBox Content="Randomize starting cosmetics"
                                  IsChecked="{Binding RandomizeStartingCosmetics}"
                                  Margin="0,6,0,0"
                                  FontSize="14" />
                        <CheckBox Content="Randomize gestral beach rewards"
                                  IsChecked="{Binding RandomizeGestralBeachRewards}"
                                  Margin="0,6,0,0"
                                  FontSize="14" />
                        <CheckBox Content="Change number of items in non-randomized checks"
                                  IsChecked="{Binding ChangeSizesOfNonRandomizedChecks}"
                                  Margin="0,6,0,0"
                                  FontSize="14" />
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeMerchantInventoryLockedCheckBox"
                                          Grid.Row="4"
                                          Content="Make any of the merchant wares locked"
                                          IsChecked="{Binding ChangeMerchantInventoryLocked}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                    <Label Content="with probability"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Name="MerchantInventoryLockedChancePercentTextBox"
                                                        Text="{Binding MerchantInventoryLockedChancePercent}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="100"
                                                        Minimum="0"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="3" />
                                    <Label Content="%"
                                           FontSize="14" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeMerchantInventorySizeCheckBox"
                                          Grid.Row="4"
                                          Content="Randomize merchant inventory sizes"
                                          IsChecked="{Binding ChangeMerchantInventorySize}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=ChangeMerchantInventorySizeCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Name="MerchantInventorySizeMinTextBox"
                                                        Text="{Binding MerchantInventorySizeMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Name="MerchantInventorySizeMaxTextBox"
                                                        Text="{Binding MerchantInventorySizeMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="NumberOfLootDropsSizeCheckBox"
                                          Grid.Row="4"
                                          Content="Randomize number of loot drops"
                                          IsChecked="{Binding ChangeNumberOfLootDrops}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=NumberOfLootDropsSizeCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Name="LootDropsNumberMinTextBox"
                                                        Text="{Binding LootDropsNumberMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="0"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Name="LootDropsNumberMaxTextBox"
                                                        Text="{Binding LootDropsNumberMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="0"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeNumberOfTowerRewardsCheckBox"
                                          Content="Randomize number of the Endless Tower rewards"
                                          IsChecked="{Binding ChangeNumberOfTowerRewards}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=ChangeNumberOfTowerRewardsCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding TowerRewardsNumberMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding TowerRewardsNumberMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeNumberOfChestContentsCheckBox"
                                          Content="Randomize number of items per map pickup"
                                          IsChecked="{Binding ChangeNumberOfChestContents}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=ChangeNumberOfChestContentsCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ChestContentsNumberMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ChestContentsNumberMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeNumberOfActionRewardsCheckBox"
                                          Content="Randomize number of cutscene rewards"
                                          IsChecked="{Binding ChangeNumberOfActionRewards}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=ChangeNumberOfActionRewardsCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ActionRewardsNumberMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ActionRewardsNumberMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,0">
                                <CheckBox Name="ChangeQuantityOfItemsCheckBox"
                                          Content="Randomize quantities of upgrade materials"
                                          IsChecked="{Binding ChangeItemQuantity}"
                                          Margin="0,6,0,0"
                                          FontSize="14" />
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,0"
                                            Visibility="{Binding IsChecked, ElementName=ChangeQuantityOfItemsCheckBox, Converter={StaticResource BooleanToVisibilityConverter}}">
                                    <Label Content="between"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ItemQuantityMin}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                    <Label Content="and"
                                           FontSize="14" />
                                    <xctk:IntegerUpDown Text="{Binding ItemQuantityMax}"
                                                        Margin="5,0,0,0"
                                                        VerticalAlignment="Center"
                                                        Maximum="99"
                                                        Minimum="1"
                                                        Height="20"
                                                        Width="50"
                                                        FontSize="14"
                                                        MaxLength="2" />
                                </StackPanel>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Grid.Row="2">
                        <Button Name="CustomItemPlacementButton"
                                Content="Customize Item Placements"
                                Width="500"
                                Height="50"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20"
                                Background="Aqua"
                                Click="CustomItemPlacementButton_Click" />
                        <Button Name="EditChecksButton"
                                Content="Edit Individual Checks"
                                Width="500"
                                Height="50"
                                FontSize="20"
                                HorizontalAlignment="Center"
                                Margin="0,10,0,20"
                                Background="Aqua"
                                Click="EditChecksButton_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
            <!--Misc Tab-->
            <TabItem Header="Misc">
                <Grid>
                    <GroupBox Grid.Row="0" Header="Save File Patching" Margin="10, 10, 5, 0" MaxHeight="200"
                              VerticalAlignment="Top">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Margin="10,10,0,0"
                                VerticalAlignment="Top"
                                TextWrapping="Wrap"
                                TextAlignment="Left"
                                MaxWidth="800">
                                It is recommended that you patch your save file to gain access to Jump and Gradient Counters if you don't have those already.
                                <LineBreak /><LineBreak />
                                They are located in %USERPROFILE%/AppData/Local/Sandfall/Saved/SavedGames/[numbers]/ and are named "EXPEDITION_[save slot id]".
                                <LineBreak />
                                There's also a Backup folder that contains all of your "Load Previous Saves" saves.
                                Simply press the button and choose the save file that you want to patch.
                            </TextBlock>
                            <Button Grid.Row="1" Name="PatchSaveButton"
                                    Content="Patch save file"
                                    Width="180"
                                    Height="35"
                                    HorizontalAlignment="Right"
                                    Margin="0,10,20,10"
                                    Click="PatchSaveButton_OnClick" />
                        </Grid>
                    </GroupBox>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Bottom Section -->
        <Border Grid.Row="1" Background="#F0F0F0" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Seed Input -->
                <Label Grid.Column="0" Content="Seed:" VerticalAlignment="Center" FontWeight="Bold" />
                <xctk:IntegerUpDown Name="SeedTextBox"
                                    Grid.Column="1"
                                    Text="{Binding Seed}"
                                    ShowButtonSpinner="False"
                                    Margin="10,0,20,0"
                                    VerticalAlignment="Center"
                                    Maximum="999999999"
                                    Minimum="-1"
                                    HorizontalAlignment="Left"
                                    Height="25"
                                    Width="100"
                                    MaxLength="10" />

                <!-- Generate Button -->
                <Button Name="GenerateButton"
                        Grid.Column="4"
                        Content="Generate and pack mod"
                        Width="150"
                        Height="35"
                        Click="GenerateButton_Click"
                        Background="#4CAF50"
                        Foreground="White"
                        FontWeight="Bold" />

            </Grid>
        </Border>

    </Grid>
</Window>