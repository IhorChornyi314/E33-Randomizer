<Window x:Class="E33Randomizer.EditEncountersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:E33Randomizer"
        Title="Edit Individual Encounters" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <DockPanel Grid.Column="0" Margin="10">
            <TextBlock Text="Encounters" FontWeight="Bold" FontSize="14" DockPanel.Dock="Top" Margin="0,0,0,10"/>
            
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <TreeView x:Name="LocationTreeView" 
                          SelectedItemChanged="LocationTreeView_SelectedItemChanged"
                          ItemsSource="{Binding Locations}">
                    <TreeView.Resources>
                        
                        <HierarchicalDataTemplate DataType="{x:Type local:EncounterLocationViewModel}" 
                                                  ItemsSource="{Binding Encounters}">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="13" 
                                     Foreground="#333" Margin="2"/>
                        </HierarchicalDataTemplate>
                        
                        <DataTemplate DataType="{x:Type local:EncounterViewModel}">
                            <TextBlock Text="{Binding Name}" Margin="5,2" 
                                     Foreground="#555" FontSize="12"/>
                        </DataTemplate>
                    </TreeView.Resources>
                </TreeView>
            </ScrollViewer>
        </DockPanel>
        
        <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="#E0E0E0"/>
        
        <DockPanel Grid.Column="2" Margin="10">
            <TextBlock Text="Enemies in the encounter" FontWeight="Bold" FontSize="14" 
                      DockPanel.Dock="Top" Margin="0,0,0,10"/>
            
            <ScrollViewer DockPanel.Dock="Top" Height="350" VerticalScrollBarVisibility="Auto" 
                         HorizontalScrollBarVisibility="Auto" Margin="0,0,0,10">
                <ListBox x:Name="SelectedEnemiesListBox" 
                         ItemsSource="{Binding SelectedEnemies}"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Text="{Binding Name}" Grid.Column="0" 
                                          VerticalAlignment="Center" Margin="5,2"/>
                                
                                <Button Grid.Column="1" Content="✕" Width="20" Height="20" 
                                       FontSize="10" Margin="5,0,0,0"
                                       Background="#FFE0E0" BorderBrush="#FFAAAA"
                                       Click="RemoveEnemy_Click"
                                       Tag="{Binding}"
                                       ToolTip="Remove enemy"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </ScrollViewer>
            
            
            <StackPanel DockPanel.Dock="Bottom">
                <TextBlock Text="Add Item:" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <ComboBox x:Name="AddEnemyComboBox" 
                          ItemsSource="{Binding AvailableEnemies}"
                          DisplayMemberPath="Name"
                          SelectedValuePath="Id"
                          Margin="0,0,0,10"
                          SelectionChanged="AddEnemyComboBox_SelectionChanged"/>
                
                
                <!--<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                    <Button x:Name="OkButton" Content="OK" Width="80" Height="30" 
                           Margin="0,0,10,0" Click="OkButton_Click" IsDefault="True"/>
                    <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="30" 
                           Click="CancelButton_Click" IsCancel="True"/>
                </StackPanel>-->
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>